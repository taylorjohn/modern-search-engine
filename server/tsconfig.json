{
    "compilerOptions": {
      "target": "ES2018",
      "module": "CommonJS",
      "lib": ["ES2018"],
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
    },
    "include": ["./**/*"],
    "exclude": ["node_modules"]
  }